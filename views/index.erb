<div class="row">
	<div class="col-md-12">
		<div class="row">
			<div class="col-md-3">
				<div class="row">
				<h3>Shows</h3>
				<% @shows.each do | show | %>

				<h4><%= show.title %></h4>
				<p><%= show.description %></p>

				<% end %>
				</div>
				<div class="row">
					<h3>DJ's</h3>
					<% @djs.each do | dj | %>
						
						<h5><%= dj.name %></h5>
						<p><%= dj.bio %></p>

						<h6><%= dj.name %> hosts:</h6>
						<ul>
						<% if !dj.shows.nil? %>
							<% dj.shows.each do | dj_show | %>
								
								<li><%= dj_show.title %></li>
							<% end %>
						<% else %>
							<p>No current shows</p>
						<% end %>
						</ul>

					<% end %>
				</div>
			</div>
			<div class="col-md-9">
				<div class="row"></div>
				
				<div class="row">
					<h1>Latest Posts</h1>
				</div>
				<div class="row">

				<% if @posts.count == 0 %>

						<div class="post">
							<h2>No posts found!</h2>
							<p>Whoops!</p>
						</div>

					<% else %>

						<% @posts.each do | post | %>

						<div class="post post_<%= post.id %>">
							<h2><%= post.title %></h2>
							<span class="post_meta">Posted by <%= post.user.name %> on <%= post.create_at %></span>
							<p>%<= post.content %></p>
						</div>

						<% end %>

					<% end %>

				</div>
			</div>
		</div>
	</div>
</div>