<form action="/admin/shows/new/" method="post">

	<div class="form-group">
		<label for="show_title">Show Title</label>
		<input type="text" class="form-control" id="show_title" name="show[title]" placeholder="New Show's Title" />
	</div>

	<div class="form-group">

		<label for="show_blurb">Show Blurb</label>
		<textarea class="form-control" id="show_blub" name="show[blurb]" rows="2" placeholder="A Blurb about the show."></textarea>

		<label for="show_description">Show Description</label>
		<textarea class="form-control" id="show_description" name="show[description]" rows="3" placeholder="New Show's Description"></textarea>
	</div>
	<% if dj? %>
	<div class="form-group">
		<input type="hidden" name="dj[id]" value="<%= env['warden'].user.id %>" />
	</div>
	<% else %>
	<div class="form-group">
		<label for="show_dj">Show DJ</label>
		<select id="show_dj" class="form-control" name="dj[id]">
			<% Dj.all.each do | dj | %>
				<option name="dj[id]" value="<%= dj.id %>"><%= dj.name %></option>
			<% end %>
		</select>
	</div>
	<% end %>
	<div class="form-group">
		<button class="btn btn-primary" type="submit">Crew New Show</button>
	</div>
</form>