<form action="/admin/posts/new/" method="post">

	<div class="form-group">
		<label for="post_title">Post Title</label>
		<input type="text" class="form-control" id="post_title" name="post[title]" placeholder="New Post's Title" />
	</div>

	<div class="form-group">
		<label for="post_contents">Post Content</label>
		<textarea class="form-control" id="post_content" name="post[content]" rows="3" placeholder="Enter Post Content"></textarea>
	</div>
	<% if dj? || admin? %>
	<div class="form-group">
		<input type="hidden" name="user[id]" value="<%= env['warden'].user.id %>" />
	</div>
	<% end %>
	<div class="form-group">
		<button class="btn btn-primary" type="submit">Create New post</button>
	</div>
</form>